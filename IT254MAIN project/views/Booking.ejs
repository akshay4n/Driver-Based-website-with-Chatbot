                <div>
                    <input type="email" name="mail3" placeholder="Email" class="data" required>
                </div>
                <br>
                <div>
                    <input type="text" name="phoneNo2" placeholder="Phone Number" class="data" required>
                </div>
                <br>
                <div>
                    <input type="text" name="house" placeholder="House no." class="data" required>
                </div>
                <br>
                <div>
                    <input type="text" name="street" placeholder="Street Address" class="data" required>
                </div>
                <br>
                <div>
                    <input type="text" name="city" placeholder="City" class="data" required>
                </div>
                <br>
                <div>
                    <input type="text" name="lmark" placeholder="Landmark" class="data">
                </div>
                <br>
                <div>
                    <input type="text" name="pc" placeholder="Pin Code" class="data" required>
                </div>
                <br>
                <div>
                    <input type="number" name="hr" placeholder="How many hours?" class="data" required>
                </div>
                <br>
                <div class="data">
                    Date<input type="date" name="date" class="data" required>
                </div>
                <br>
                <div class="data">
                    Time<input type="time" name="time" class="data" required>
                </div>
                <br>
                <div>
                    <a href="/booked" method="POST">
                        <input type="submit" value="Book Now" id="bookingbtn">
                    </a>
                </div>
