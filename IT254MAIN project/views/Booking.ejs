        font-size: 20px;
        margin: -8px;
        margin-top: -20px;
        margin-bottom: 15px;
        padding: auto;
        height: 60px;
    }

    .bookingnav li {
        list-style: none;
        float: left;
        padding: 15px;
    }

    .bookingnav li a {
        text-decoration: none;
        color: white;
    }

    .bookingnav li a:hover {
        color: gray;
    }

    .bookingnav ul {
        overflow: auto;
    }

    #bookingsearch {
