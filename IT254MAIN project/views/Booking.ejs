    }

    .bookingnav2 {
        background-color: black;
        color: white;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        margin: -8px;
        margin-top: -20px;
        margin-bottom: 15px;
        padding: auto;
        height: 70px;
    }

    #srcbtn {
        position: absolute;
        right: 3%;
        top: 57px;
        height: 49px;
        width: 150px;
        background-color: darkgray;
        font-size: 20px;
        color: black;
        text-decoration: none;
    }

    #srcbtn:hover {
        background-color: gray;
        cursor: pointer;
    }

    #bookingcontainer {
        background-image: url('https://images.unsplash.com/photo-1560958089-b8a1929cea89?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1502&q=80');
        width: 90%;
        background-repeat: no-repeat;
        background-size: 100%;
        background-color: rgb(41, 40, 40);
        padding: 10px;
        margin: auto;
        margin-top: 70px;
        border-radius: 5px;
    }

    #bgimg {
        width: 100%;
    }

    .data {
        font-size: 20px;
    }

    #datain {
        width: 30%;
        text-align: center;
        border-radius: 5px;
        background-color: white;
        margin: 30px;
        padding: 20px;
        border: white solid;
    }

    #bookingbtn {
        margin: 15px;
        height: 35px;
        width: 150px;
        background-color: rgb(41, 40, 40);
        border-radius: 5px;
        font-size: 20px;
        color: white;
        text-decoration: none;
        border: solid black;
    }

    #bookingbtn:hover {
        background-color: black;
        cursor: pointer;
    }

    .about {
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        color: black;
        background-color: white;
        padding: 20px;
        margin: 40px -10px -10px -10px;
    }

    @media screen and (max-width: 800px) {
        #bookingtitle {
            font-size: 30px;
            padding: 10px;
            padding-right: 25vw;
        }

        .data {
            font-size: 25px;
        }

        #datain {
            width: 97%;
            text-align: center;
            border-radius: 5px;
            background-color: white;
            margin: -10px;
            border: white solid;
        }

        #bookingcontainer {
            width: 90%;
            background-color: rgb(41, 40, 40);
            padding: 10px;
            margin: auto;
            margin-top: 70px;
            border-radius: 5px;
        }
    }
</style>

